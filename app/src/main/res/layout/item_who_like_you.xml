<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="args"
            type="com.example.piga.ui.home.wholikeyou.adapter.WhoLikeYouListAdapter.WhoLikeYouArgs" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dp_8"
            app:cardCornerRadius="@dimen/dp_8"
            app:layout_constraintDimensionRatio="W,16:12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:setBackgroundResourceCompat="@{args.image}"
                app:layout_constraintDimensionRatio="W,16:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/before_login_background" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/personName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/dp_12"
                android:text="@{args.name}"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                tools:text="Sultan KÃ¶se" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/gender"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_gravity="end|bottom"
                android:layout_margin="@dimen/dp_12"
                app:setBackgroundResourceCompat="@{args.genderImage}"
                app:layout_constraintBottom_toBottomOf="@id/personName"
                app:layout_constraintStart_toEndOf="@id/personName"
                app:layout_constraintTop_toTopOf="@id/personName"
                tools:srcCompat="@drawable/ic_gender_female" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>